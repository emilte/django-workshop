{
  /// Autosave ///
  "files.autoSave": "onFocusChange",

  /// linting ///
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": ["--config-file", "mypy.ini", "--no-pretty"],
  "python.linting.pylintEnabled": false,
  "python.linting.ignorePatterns": ["**/.venv/**/*", "**/.pyenv/**/*"],

  /// testing ///
  "python.testing.pytestEnabled": true,

  /// formatting ///
  "python.formatting.provider": "yapf",
  "editor.formatOnSave": true,

  /// Other ///
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "off",
  "editor.rulers": [120],
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#fff",
    "titleBar.activeBackground": "#0b4b33",
    "titleBar.inactiveBackground": "#0b4b33"
  },
  // Autocomplete html attributes as well as django tags.
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "files.defaultLanguage": "${activeEditorLanguage}",
  "editor.bracketPairColorization.enabled": true
}
