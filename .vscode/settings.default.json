{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "${workspaceFolder}/.venv/bin/pylint", // May need to set this yourself.
    "python.linting.pylintArgs": [
        "--init-hook",
        "from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.dirname(find_pylintrc()))"
    ],
    "python.testing.pytestEnabled": true,
    "python.formatting.provider": "yapf"
}
