{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Emil debugger:
    // Attaches to injected debugpy hosted on port 5678.
    // https://code.visualstudio.com/docs/containers/docker-compose
    {
      "name": "Emil debugger",
      "type": "python",
      "request": "attach",
      "django": true,
      "justMyCode": false,
      "connect": {
        "host": "0.0.0.0",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ]
    },
    // Used when running tests through VSCode.
    {
      "name": "Python: Pytest debugger",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "django": true,
      "envFile": "${workspaceFolder}/kp_settings.env",
      "justMyCode": false,
      "purpose": ["debug-test"]
    },
    // Running this debugger starts another server.
    // Might need to be run whilst connected through remote container.
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000", "--noreload"],
      "django": true
    },
    // Shortcut to run django command.
    // Might need to be run whilst connected through remote container.
    {
      "name": "generateschema",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["generateschema"]
    },
    {
      "name": "generate_typescript",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["generate_typescript", "--exclude", "'Patched*'"]
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/scripts/test",
      "args": ["--env=jsdom", "--runInBand"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceRoot}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}
